
{
"version": 2,
"builds": [
  {
    "src": "lang_tutor/wsgi.py",
    "use": "@vercel/python",
    "config": { "maxLambdaSize": "1024mb", "runtime": "python3.9" }
  },
  {
    "src": "build_files.sh",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "staticfiles"
    }
  }
],
"routes": [
  {
    "src": "/static/(.*)",
    "dest": "/static/$1/"
  },
  {
    "src": "/(.*)",
    "dest": "lang_tutor/wsgi.py"
  }
]
}